ul.navbar-nav.ml-auto.w-100.justify-content-end
  li.nav-item
    = link_to 'Blog', root_path, class: "fancy menu nav-link #{yield(:blog_active)}"
  li.nav-item
    = link_to 'About', about_path, class: "fancy menu nav-link #{yield(:about_active)}"
  - if designer_signed_in?
    li.nav-item.dropdown.designer-nav
      = link_to "#", class: 'nav-link dropdown-toggle', id: 'navbarDropdownMenuLink', data: {toggle:'dropdown'}, aria: {haspopup: 'true', expanded: 'false'}  do
        = image_tag(current_designer.gravatar_image_url)
        = current_designer.display_name
      .dropdown-menu[aria-labelledby="navbarDropdownMenuLink"]
        = link_to 'My posts', designers_posts_path, class: "fancy menu dropdown-item"
        = link_to 'Account', edit_designers_account_path, class: "fancy menu dropdown-item"
        = link_to 'Logout', destroy_designer_session_path, method: :delete, class: "fancy menu dropdown-item"
  - else
    li.nav-item
      = link_to 'Sign In', designers_posts_path, class: "fancy menu nav-link #{yield(:designer)}"
