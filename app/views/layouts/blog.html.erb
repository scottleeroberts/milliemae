<!DOCTYPE html>
<html>
  <head>
    <title><%= yield(:page_title) %> | MillieMae</title>
    <%= csrf_meta_tags %>
    <link href="https://fonts.googleapis.com/css?family=Cormorant+Garamond:400,600i,700|Quicksand:400,700" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render 'layouts/navbar' %>
    <% if notice | alert %>
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
    <% end  %>
    <div class="container <%= controller_name %> <%= action_name %>">
      <%= yield %>
    </div>
    <%= render 'layouts/disqus_count'%>
  </body>
</html>
