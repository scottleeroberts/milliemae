<% provide(:page_title, @post.title) %>
<% provide(:blog_active, "active") %>

<div class="row">
  <div class="col-md-10 offset-md-1 text-lg-center text-xs-center">
    <h1><%= @post.title %></h1>
    <h6><%= @post.published_date  %></h6>
    <%= @post.body.html_safe %>
    <div class="author-bio">
      <%= image_tag(@post.author.gravatar_image_url) %>
      <h4><%= @post.author.name%>
      <h6><%= @post.author.bio %>
    </div>
    <div id="disqus_thread"></div>
    <noscript>
      Please enable JavaScript to view the <a href="https://disqus.com/?ref_noscript">comments powered by Disqus.</a>
    </noscript>
  </div>
</div>

<%= render 'layouts/disqus'%>
