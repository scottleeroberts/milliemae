#designer-profile{
  img {
    height: 60px;
    width: 60px;
    border-radius: 50%;
    border: 1px solid $primary-color-light;
  }
  .social-media-links{
    ul {
      text-align: center;
      list-style: none;
      padding-left: 0;
      margin-left: 0;
      li{
        display: inline-block;
        width: 24px;
        height: 24px;
        border-radius: 50%;
        text-align: center;
        vertical-align: middle;
        background: $lilac;
        color: #59c0b1;
        font-size: 16px;
        line-height: 1.6;
        margin: 0 2px;
        letter-spacing: 0;
      }
    }
  }
}

.posts.index {
  .card {
    box-shadow: 0 8px 16px -6px $lilac;
    border: none;
    border-radius: 15%;
    height: 4250px;
    margin-bottom: 20px;
    background-color: white;
    a:hover{
      text-decoration: none;
      .badge{
        opacity: .7;
      }
    }
    .card-topper {
      height: 240px;
      width: 100%;
      background-size: cover;
      background-position: center;
    }
    .card-block {
      padding: 10px;
      .card-title {
        font-size: 1.3rem;
        margin-bottom: 0;
        a {
          color: black;
          text-decoration: none;
        }
      }
      .info{
        width: 100%;
        display: inline-block;
      }
      .card-text {
        font-size: 0.9rem;
        color: black;
        max-height: 100px;
      }
    }
  }
}

.posts.edit, .posts.new {
  nav{
    padding-bottom: 5px;
  }
  .card {
    .card-block {
      background-color: $light-gray;
    }
    .card-body{
      background-color: $primary-color;
    }
    .card-title {
      margin-bottom: 0;
      font-size: 18px;
    }
    .card-text{
      .form-control{
        margin-bottom: 5px !important;
      }
      #flatlay-hotspot{
        width: <%= STANDARD_IMAGE_WIDTH %>px !important;
      }
      #collapseProductLinks{
        width:300px;
      }
    }

    .list-group-item {
      padding: 10px;
      border-left: 0;
      border-right: 0;
      input[type='text'], textarea {
        font-size: 14px;
        background-color: $light-gray;
      }
      textarea {
        height: 100px;
      }
      &:last-child {
        background-color: $light-gray;
      }
    }
  }

  .product-links{
    padding-top: 15px;
    padding-bottom: 15px;
    background: white;
    margin: 15px;
  }
}

.posts.show {
  article.flatlay{
    border: solid 3px $primary-color;
    border-radius: 20px;
    padding: 10px;
    background: $lilac-lighter;

    .header{
      padding-left: 15px;
      border-bottom: 3px solid $lilac;
    }

    aside {
      padding-top: 20px;
    }

    img {
      width: <%= STANDARD_IMAGE_WIDTH %>px;
      height: auto
    }

    .row.section {
        box-shadow: 0 8px 16px -6px $lilac;
        border: 1px $primary-color;
        border-radius: 20px;
        background: $primary-color;
        padding: 0px;
        margin: 0px;
        margin-bottom:20px;
        &:child {
          padding: 0px;
        }
      }

    .flatlay-highlight {
      background: 'rgb(0, 0, 0, 0.3)';
      z-index: 9;
      display: block;
      position: absolute;
      border: 2px dashed rgba(0, 0, 0, 0.8);
    }

    .url-highlight {
      background: $lilac-light;
      z-index: 9;
      a {
        color: black !important;
      }
    }

    .product-link-url {
      padding-left: 10px;
    }

    .product-links {
      border-radius:  10px;
      padding-top: 10px;
      padding-bottom: 10px;
      border: 1px $secondary-text-color;
      background: $beige;
      margin-bottom: 10px;
      max-height: 425px;
      overflow-y: auto;
      ul {
        padding-left: 0px;
        list-style-type: none;
        h5 {
          padding-left: 5px;
        }
        a {
          color:  $primary-text-color;
          &:hover{
            text-decoration: underline;
          }
        }
      }
    }
  }

  article.post-body {
    width: 100%;
    section {
      padding: 20px;
    }

    img {
      float: right;
      max-width: 50%;
      height: auto;
    }
  }

  .designer-bio {
    width: 100%;
    background-color: white;
    padding: 15px 45px;
    margin: 30px 0;

    img {
      border-radius: 50%;
    }

    img, h4 {
      margin-bottom: 10px;
    }

    h4 {
      font-weight: bold;
      font-size: 22px;
    }

    h6 {
      font-weight: 300;
      font-size: 14px
    }
  }
}

.published {
  font-size: 0.8rem;
  color:  $secondary-text-color;
  font-weight: 300;
  margin-top: 0.3rem;
  margin-bottom: 0.3rem;
}


@media screen and (min-width: 34em) {
  .posts.index .card {
    height: 465px;
  }
}

/* Medium. Above 48em (768px) */
@media screen and (min-width: 48em) {
  .posts.index .card {
    height: 465px;
  }
}

/* Extra large. Above 75em (1200px) */
@media screen and (min-width: 75em) {
  .posts.index .card {
    height: 465px;
  }
}
